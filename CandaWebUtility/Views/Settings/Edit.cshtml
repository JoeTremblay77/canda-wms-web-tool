@model CandaWebUtility.Data.Settings

@{
     ViewBag.Title = "Edit Settings";
}


<div class="content-wrapper">

    @using (Html.BeginForm("Edit", "Settings", FormMethod.Post, new { @class = "form-horizontal", autocomplete = "off" }))
{
    @Html.AntiForgeryToken()
     


            <div class="row form-header">
                <div class="col-md-4">
                    <h4>@ViewBag.Title</h4>
                </div>
				  </div>

         


		 <div class="row">
     
	     <div class="form-horizontal">
        @Html.ValidationSummary(DeploymentState.IsRelease)

        @Html.HiddenFor(model => model.SettingId)

        <div class="form-group">
            @Html.LabelFor(model => model.SettingName, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.SettingName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SettingName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SettingValue, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.SettingValue, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SettingValue)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
	</div>
	      </div>


	

      
}


</div>

    <div class="back-to-list-wrapper">
        @Html.ActionLink("Back to List", "Index")
    </div>
@Html.Partial("ValidateDisableFix")

