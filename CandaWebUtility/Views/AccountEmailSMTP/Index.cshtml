@model IEnumerable<CandaWebUtility.Data.AccountEmailSMTP>
@using GridMvc.Html

@{
    ViewBag.Title = "Account Email SMTP";
}

<div class="content-wrapper">

    <h4>Account Email SMTP</h4>

    <span class="text-danger">@ViewBag.ErrorMsg</span>
    @if (Model.Count() == 0)
    {

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }

    <div class="grid-container">
        @Html.Grid(Model).Columns(columns =>
{
    columns.Add().Encoded(false).Sanitized(false).SetWidth(20).RenderValueAs(o => Html.ActionLink("Edit", "Edit", new { id = o.EmailSettingId }));

    columns.Add(c => c.FromEmailAddress).Titled("FromEmailAddress").Sortable(true).Filterable(true);
    columns.Add(c => c.Host).Titled("Host").Sortable(true).Filterable(true);
    columns.Add(c => c.UserName).Titled("UserName").Sortable(true).Filterable(true);
   columns.Add(c => c.UseSSL).Titled("UseSSL").Sortable(true).Filterable(true);
    columns.Add(c => c.Port).Titled("Port").Sortable(true).Filterable(true);
    columns.Add().Encoded(false).Sanitized(false).SetWidth(20).RenderValueAs(o => Html.ActionLink("Delete", "Delete", new { id = o.EmailSettingId }, new { onclick = "return confirm('Delete this?');" }));
}).WithPaging(1000).Sortable(true).Filterable(true).WithMultipleFilters()
    </div>
</div>